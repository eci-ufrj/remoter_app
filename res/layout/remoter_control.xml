<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="152dp" android:layout_gravity="center_horizontal|top">
        </LinearLayout>
    </FrameLayout>
    <Button
            android:layout_width="218dp"
            android:layout_height="wrap_content"
            android:text="Play"
            android:id="@+id/button" android:layout_gravity="center_horizontal"
            android:onClick="startAction"/>
    <Button
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:text="Stop"
            android:id="@+id/button2" android:layout_gravity="center_horizontal"
            android:onClick="stopAction"/>

</LinearLayout>